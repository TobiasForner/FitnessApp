<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:onClick="logExercise"
        android:text="@string/log_button"
        app:layout_constraintEnd_toEndOf="@+id/exerciseName"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/exerciseNumberInput" />

    <EditText
        android:id="@+id/exerciseNumberInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/weight"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/exerciseName"
        app:layout_constraintStart_toStartOf="@+id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/repNumberInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/reps"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/exerciseName"
        app:layout_constraintStart_toStartOf="@+id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/setProgressText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight_unit"
        app:layout_constraintBottom_toBottomOf="@+id/exerciseNumberInput"
        app:layout_constraintEnd_toStartOf="@+id/exerciseNumberInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/exerciseNumberInput"
        app:layout_constraintTop_toTopOf="@+id/exerciseNumberInput"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/workout"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/reps"
        app:layout_constraintEnd_toEndOf="@+id/repNumberInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/repNumberInput"
        app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/weight"
        app:layout_constraintEnd_toEndOf="@+id/exerciseNumberInput"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/exerciseNumberInput"
        app:layout_constraintTop_toBottomOf="@+id/repNumberInput" />

    <TextView
        android:id="@+id/setProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/reps"
        app:layout_constraintEnd_toEndOf="@+id/exerciseName"
        app:layout_constraintStart_toStartOf="@+id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

    <TextView
        android:id="@+id/prev_results_header"
        android:layout_width="129dp"
        android:layout_height="18dp"
        android:layout_marginTop="68dp"
        android:text="@string/prev_results"
        app:layout_constraintEnd_toEndOf="@+id/prev_results_body"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/prev_results_body"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/prev_results_body"
        android:layout_width="171dp"
        android:layout_height="131dp"
        android:text="@string/prev_results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/exerciseName"
        app:layout_constraintStart_toStartOf="@+id/exerciseName"
        app:layout_constraintTop_toBottomOf="@+id/prev_results_header"
        app:layout_constraintVertical_bias="0.212" />
</androidx.constraintlayout.widget.ConstraintLayout>