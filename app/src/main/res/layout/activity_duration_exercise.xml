<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DurationExerciseActivity">

    <ProgressBar
        android:id="@+id/progressBar_duration_exercise"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/duration_exercise_name"
        app:layout_constraintStart_toStartOf="@+id/duration_exercise_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/duration_exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/exercise_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editText_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration_exercise_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/duration_exercise_weight_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        app:layout_constraintBottom_toTopOf="@+id/duration_exercise_weight_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/duration_exercise_weight_edit_text"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="@+id/duration_exercise_weight_edit_text"
        app:layout_constraintTop_toTopOf="@+id/duration_exercise_weight_edit_text"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/duration_exercise_weight_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/weight"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <Button
        android:id="@+id/button_start_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:onClick="startDuration"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/duration_exercise_weight_edit_text"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="@+id/duration_exercise_weight_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/duration_exercise_weight_edit_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/duration_exercise_skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="skipTimer"
        android:text="@string/skip"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_duration"
        app:layout_constraintTop_toTopOf="@+id/editText_duration" />

    <TextView
        android:id="@+id/duration_exercise_set_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/duration_exercise_name"
        app:layout_constraintEnd_toEndOf="@+id/duration_exercise_name"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/duration_exercise_name"
        app:layout_constraintTop_toBottomOf="@+id/duration_exercise_name"
        app:layout_constraintVertical_bias="0.171" />

    <TextView
        android:id="@+id/duration_exercise_prev_results_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:text="@string/prev_results"
        app:layout_constraintEnd_toEndOf="@+id/button_start_duration"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/button_start_duration"
        app:layout_constraintTop_toBottomOf="@+id/duration_exercise_skip_button" />

    <TextView
        android:id="@+id/duration_exercise_prev_results_body"
        android:layout_width="171dp"
        android:layout_height="131dp"
        android:text="@string/prev_results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/duration_exercise_prev_results_header"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/duration_exercise_prev_results_header"
        app:layout_constraintTop_toBottomOf="@+id/duration_exercise_prev_results_header"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_duration">

        <NumberPicker
            android:id="@+id/activity_duration_seconds_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_duration_minute_picker"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/activity_duration_minute_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min"
            app:layout_constraintBottom_toTopOf="@+id/activity_duration_minute_picker"
            app:layout_constraintEnd_toEndOf="@+id/activity_duration_minute_picker"
            app:layout_constraintStart_toStartOf="@+id/activity_duration_minute_picker"
            app:layout_constraintTop_toTopOf="@+id/activity_duration_minute_picker"
            app:layout_constraintVertical_bias="0.526" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sec"
            app:layout_constraintBottom_toTopOf="@+id/activity_duration_seconds_picker"
            app:layout_constraintEnd_toEndOf="@+id/activity_duration_seconds_picker"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="@+id/activity_duration_seconds_picker"
            app:layout_constraintTop_toTopOf="@+id/activity_duration_seconds_picker" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>